from common.common_connet_mysql import DbConnect


dbinfo = {
    "host": "host",
    "user": "user",
    "password": "password",
    "port": 3306
}


def select_sql(select_sql):
    '''查询数据库'''
    db = DbConnect(dbinfo, database="x2era_message_test")
    result = db.select(select_sql)  # 查询
    db.close()
    return result


def execute_sql(insert_sql):
    '''执行sql'''
    db = DbConnect(dbinfo, database="x2era_message_test")
    db.execute(insert_sql)  # 查询
    db.close()


